    <div class="alert alert-danger text-center">
        {{ flashMessage }}
    </div>

{% endfor %}
</div>

<div class="container">
    <div class="row">
        {% include '@Hotel/Parts/_menu.html.twig' %}

        {% block content %}
        {% endblock content %}
    </div>
</div>

<script src="{{ asset('js/hotel.js') }}"></script>
</body>

</html>