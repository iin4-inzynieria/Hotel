{% extends '@Hotel/layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>{{ room.title }}</h1>
    </div>
    <div class="bs-component">
        <div class="col-lg-6">
            <p class="text-justify">{{ room.description }}</p>
        </div>
        <div class="col-lg-6">
            <img class="img-thumbnail" src="{{ room.imageLink }}" alt="{{ room.title }}">
            <h3 class="text-center"><em>{{ room.roomType == 0 ? 'Pokój standardowy' : 'Apartament' }}</em></h3>
            <p class="text-center"><strong>Cena za dzień: </strong>{{ roomPrice }} PLN</p>
        </div>
    </div>
{% endblock content %}